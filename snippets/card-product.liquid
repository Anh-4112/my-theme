<script>
  document.addEventListener('DOMContentLoaded', function () {
    setTimeout(() => {
      const swatches = document.querySelectorAll('.variant-color-swatches .swatch');
  
      swatches.forEach((swatch) => {
        swatch.addEventListener('click', function (event) {
          event.preventDefault();
          event.stopPropagation();
          event.stopImmediatePropagation();
  
          const color = swatch.dataset.color;
          const imageUrl = swatch.dataset.image;
          const card = swatch.closest('.card');
  
          // T√¨m <img> trong .media
          let imageEl = card?.querySelector('.media img');
  
          console.log('üé® Ch·ªçn m√†u:', color, '‚Üí ·∫¢nh:', imageUrl);
  
          if (!imageEl) {
            console.warn('‚ùå Kh√¥ng t√¨m th·∫•y ·∫£nh');
            return;
          }
  
          // G·ª° c√°c thu·ªôc t√≠nh li√™n quan ƒë·∫øn lazy load n·∫øu c√≥
          imageEl.setAttribute('src', imageUrl);
          imageEl.removeAttribute('srcset');
          imageEl.removeAttribute('data-src');
          imageEl.removeAttribute('loading');
  
          console.log('·∫¢nh ƒë√£ c·∫≠p nh·∫≠t th√†nh:', imageUrl);
        });
      });
    }, 100);
  });  
</script>
